{
    "name": "pantheon-upstreams/drupal-project",
    "description": "Install Drupal 9 with Composer on Pantheon.",
    "type": "project",
    "license": "MIT",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "civicrm/civicrm-core": "~5.35",
        "civicrm/civicrm-drupal-8": "~5.35",
        "composer/installers": "^1.9",
        "cweagans/composer-patches": "^1.7",
        "drupal/asset_injector": "^2.10",
        "drupal/ckeditor": "^1.0",
        "drupal/color": "^1.0",
        "drupal/commerce_recurring": "^1.0@RC",
        "drupal/commerce_reports": "^1.0@RC",
        "drupal/commerce_stripe": "^1.0",
        "drupal/config_perms": "^2.0",
        "drupal/core": "^10.2",
        "drupal/core-composer-scaffold": "^10",
        "drupal/core-recommended": "^10",
        "drupal/feeds": "^3.0@beta",
        "drupal/field_permissions": "^1.1",
        "drupal/file_entity": "^2.0@RC",
        "drupal/geolocation": "^3.12",
        "drupal/image_effects": "^3.4",
        "drupal/imagemagick": "^3.4",
        "drupal/key_auth": "^2.0",
        "drupal/mailsystem": "^4.4",
        "drupal/oauth2_server": "^2.0@beta",
        "drupal/openai": "^1.0@alpha",
        "drupal/pathauto": "^1.11",
        "drupal/rdf": "^2.1",
        "drupal/redirect": "^1.8",
        "drupal/sendgrid_integration": "^2.2",
        "drupal/simple_sitemap": "^4.1",
        "drupal/smtp": "^1.2",
        "drupal/symfony_mailer": "^1.2",
        "drupal/term_reference_tree": "^2.0",
        "drupal/theme_switcher": "^2.0",
        "drupal/upgrade_status": "^4.0",
        "drupal/views_autocomplete_filters": "^1.3",
        "drush/drush": "^11"
    },
    "require-dev": {
        "drupal/core-dev": "^10"
    },
    "conflict": {
            "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "compile-mode": "all",
        "drupal-scaffold": {
            "locations": {
                "web-root": "./web"
            },
            "allowed-packages": [
                "pantheon-systems/drupal-integrations"
            ],
            "file-mapping": {
                "[project-root]/.editorconfig": false,
                "[project-root]/pantheon.upstream.yml": false,
                "[project-root]/.gitattributes": false
            }
        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"],
            "web/modules/custom/{$name}": ["type:drupal-custom-module"],
            "web/profiles/custom/{$name}": ["type:drupal-custom-profile"],
            "web/themes/custom/{$name}": ["type:drupal-custom-theme"],
            "web/private/scripts/quicksilver/{$name}/": ["type:quicksilver-script"]
        },
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "8.1"
        },
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "drupal/core-composer-scaffold": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true,
            "civicrm/composer-downloads-plugin": true,
            "civicrm/composer-compile-plugin": true,
            "civicrm/civicrm-asset-plugin": true
        }
    }
}
